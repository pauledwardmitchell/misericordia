<%= form_for @security_contract, :html => {:class => "form-group"}, url: {action: "update", :id => @security_contract.id} do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :old_monthly_payment %>
  <%= f.number_field :old_monthly_payment %>
  <%= f.label :cpa_monthly_payment %>
  <%= f.number_field :cpa_monthly_payment %>
  <%= f.label :qbo_customer_id %>
  <%= f.select :qbo_customer_id, options_for_select(@customer_arrays, @security_contract.qbo_customer_id) %>
  <%= f.label :rebate_percentage %>
  <%= f.number_field :rebate_percentage, :step => 0.0001 %>
  <%= f.label :contract_start_date %>
  <%= f.date_field :contract_start_date %>
  <%= f.label :contract_end_date %>
  <%= f.date_field :contract_end_date %>

  <%= f.hidden_field :cover_sheet_entered, value: true %>

  <%= f.submit "Update Contract" %>
<% end %>
